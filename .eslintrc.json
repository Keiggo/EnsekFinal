{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:jest/recommended",
    "plugin:jest/style"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": [
      "tsconfig.json"
    ]
  },
  "plugins": [
    "@typescript-eslint",
    "jest",
    "extra-rules",
    "unused-imports"
  ],
  "rules": {
    "indent": ["error", 4]
  }
}
